<div class="wrapper">
	<div class="container">
		<div class="cards">
			<h1>List of All Tasks</h1>
			<% @tasks.each do |task|  %>
			<div class="card">
				<% if task.completed == true %>
					<i class="far fa-check-square"></i>
				<% else %>
					<i class="far fa-square"></i>
				<% end %>
				<h3><%= link_to "#{task.title}", task_path(task)%></h3>	
			</div>
			<% end  %>
			<div class="action-box">
				<%= link_to "Add a task", tasks_new_path, class: 'btn btn-primary' %>
			</div>
		</div>
	</div>
</div>


