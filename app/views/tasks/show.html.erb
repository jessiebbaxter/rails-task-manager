<div class="wrapper">
	<div class="container">
		<div class="action-box">
			<%= link_to "<< Back to tasks", tasks_path %>
		</div>
		<h2><%= @task.title %></h2>
		<div class="card">
			<% if @task.completed == true %>
			<i class="far fa-check-square"></i>
			<% else %>
				<i class="far fa-square"></i>
			<% end %>
			<h3><%= @task.details %></h3>
		</div>
		<div class="action-box">
			<%= link_to "Mark as complete", tasks_complete_path, method: :patch, class: 'btn btn-success' %>
			<%= link_to "Edit task", tasks_edit_path, class: 'btn btn-primary' %>
			<%= link_to "Delete task", tasks_delete_path, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
		</div>
	</div>
</div>